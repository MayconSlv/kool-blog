{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@env": ["./env"],
      "@env/*": ["./env/*"],
      "@data": ["./data"],
      "@data/*": ["./data/*"],
      "@api": ["./api"],
      "@api/": ["./api/*"],
      "@domain": ["./domain"],
      "@domain/*": ["./domain/*"],
      "@test": ["./test"],
      "@test/*": ["./test/*"]
    }
  }
}